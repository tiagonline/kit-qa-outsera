{
  "name": "kit-qa-outsera",
  "description": "Kit de Automação de Testes QA com Playwright, Cucumber e K6",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npx playwright install --with-deps",

    "// --- Testes ---": "",
    "test:api": "npx playwright test tests/api",
    "test:e2e": "npx cucumber-js",
    "test:mobile": "npx playwright test tests/mobile --project='Mobile Chrome'",
    "test:all": "npm run test:api && npm run test:e2e && npm run test:mobile && npm run k6:run",
    "test:extra": "npx playwright test tests/e2e/extra/checkout.native.spec.ts && npx playwright show-report",

    "// --- Relatórios ---": "",
    "report:api": "npx playwright show-report",

    "// --- K6 (Performance) ---": "",
    "k6:build": "webpack --config tests/k6-load/webpack.config.js",
    "k6:infra:up": "cd tests/k6-load && docker-compose up -d",
    "k6:infra:down": "cd tests/k6-load && docker-compose down",
    "k6:run": "npm run k6:build && k6 run tests/k6-load/dist/outsera.test.js --out influxdb=http://localhost:8086/k6",

    "// --- Qualidade ---": "",
    "format": "prettier --write \"**/*.{ts,js,json,yml,md}\"",
    "lint": "eslint . --ext .ts",
    "ci": "npm run format && npm run lint && npm run test:all"
  },
  "keywords": [
    "playwright",
    "API",
    "e2e",
    "performance",
    "mobile",
    "BDD",
    "CI/CD",
    "Automation"
  ],
  "author": "Tiago Silva",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cucumber/cucumber": "^10.0.0",
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.34.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "k6": "^0.0.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {}
}
